# Grafana Dashboard - Service Metrics
# Import this JSON into Grafana

{
  "dashboard": {
    "id": null,
    "title": "Visão de Águia - Service Metrics",
    "tags": ["surveillance", "ai", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "FPS Input by Service",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(frames_processed_total[5m]) * 60",
            "legendFormat": "{{service}} FPS",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {"displayMode": "list", "orientation": "horizontal"},
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "green", "value": 15}
              ]
            },
            "unit": "fps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Processing FPS by Service",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(fusion_infer_seconds_count[5m]) * 60",
            "legendFormat": "{{service}} Processed",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 3},
                {"color": "green", "value": 10}
              ]
            },
            "unit": "fps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Inference Latency (Avg/P95)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(fusion_infer_seconds_bucket[5m]))",
            "legendFormat": "{{service}} P50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(fusion_infer_seconds_bucket[5m]))",
            "legendFormat": "{{service}} P95",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Signals Generated",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(signals_generated_total[5m])) by (service, severity)",
            "legendFormat": "{{service}} {{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "reqps"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 5,
        "title": "Open Incidents by Severity",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum(incidents_open_total) by (severity)",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Error Rate by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "{{service}} Error Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Camera Incident Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(incidents_created_total[1h])) by (camera_id)",
            "legendFormat": "{{camera_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "spectrum",
              "scheme": "Oranges"
            }
          }
        },
        "gridPos": {"h": 12, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Queue Depth by Service",
        "type": "timeseries",
        "targets": [
          {
            "expr": "queue_depth_seconds",
            "legendFormat": "{{service}} Queue",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "unit": "s",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 2},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36}
      },
      {
        "id": 9,
        "title": "Circuit Breaker States",
        "type": "stat",
        "targets": [
          {
            "expr": "circuit_breaker_state",
            "legendFormat": "{{service}} {{camera_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"color": "green", "text": "CLOSED"}}, "type": "value"},
              {"options": {"1": {"color": "yellow", "text": "HALF_OPEN"}}, "type": "value"},
              {"options": {"2": {"color": "red", "text": "OPEN"}}, "type": "value"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 36}
      },
      {
        "id": 10,
        "title": "Model Performance Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "model_inference_duration_seconds",
            "legendFormat": "{{model_name}} {{version}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "color-background"
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 44}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "30s"
  }
}